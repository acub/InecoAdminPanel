<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/unnamed"
    android:scaleType="centerCrop"

    tools:context="ru.inecopay.inecoadminapp.FullscreenActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="InecoPay\nПанель администратора"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/pin1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_pin_off"
                android:gravity="center"
                android:maxWidth="12dp"
                android:minWidth="12dp" />

            <Button
                android:id="@+id/pin2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_pin_off"
                android:gravity="center"
                android:maxWidth="12dp"
                android:minWidth="12dp" />

            <Button
                android:id="@+id/pin3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_pin_off"
                android:gravity="center"
                android:maxWidth="20dp"
                android:minWidth="20dp" />

            <Button
                android:id="@+id/pin4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_pin_off"
                android:gravity="center"
                android:maxWidth="20dp"
                android:minWidth="20dp" />

            <Button
                android:id="@+id/pin5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_pin_off"
                android:gravity="center"
                android:maxWidth="20dp"
                android:minWidth="20dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Введите пин код"
                android:textColor="@android:color/background_light" />
        </LinearLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="3"
            android:foregroundGravity="center_horizontal"
            android:orientation="horizontal"
            android:rowCount="3">

            <Button
                android:id="@+id/num_button_1"
                android:layout_margin="2dp"
                android:background="@drawable/selector"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="50sp" />

            <Button
                android:id="@+id/num_button_2"
                android:layout_margin="2dp"
                android:background="@drawable/selector"
                android:text="2"
                android:textColor="#FFFFFF"
                android:textSize="50sp" />

            <Button
                android:id="@+id/num_button_3"
                android:layout_margin="2dp"
                android:background="@drawable/selector"
                android:text="3"
                android:textColor="#FFFFFF"
                android:textSize="50sp" />

            <Button
                android:id="@+id/num_button_4"
                android:layout_margin="2dp"
                android:background="@drawable/selector"
                android:text="4"
                android:textColor="#FFFFFF"
                android:textSize="50sp" />

            <Button
                android:id="@+id/num_button_5"
                android:layout_margin="2dp"
                android:background="@drawable/selector"
                android:text="5"
                android:textColor="#FFFFFF"
                android:textSize="50sp" />

            <Button
                android:id="@+id/num_button_6"
                android:layout_margin="2dp"
                android:background="@drawable/selector"
                android:text="6"
                android:textColor="#FFFFFF"
                android:textSize="50sp" />

            <Button
                android:id="@+id/num_button_7"
                android:layout_margin="2dp"
                android:background="@drawable/selector"
                android:text="7"
                android:textColor="#FFFFFF"
                android:textSize="50sp" />

            <Button
                android:id="@+id/num_button_8"
                android:layout_margin="2dp"
                android:background="@drawable/selector"
                android:text="8"
                android:textColor="#FFFFFF"
                android:textSize="50sp" />

            <Button
                android:id="@+id/num_button_9"
                android:layout_margin="2dp"
                android:background="@drawable/selector"
                android:text="9"
                android:textColor="#FFFFFF"
                android:textSize="50sp" />

            <Button
                android:id="@+id/num_button_cls"
                android:layout_margin="2dp"
                android:background="@android:drawable/ic_menu_close_clear_cancel"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="50sp" />

            <Button
                android:id="@+id/num_button_0"
                android:layout_margin="2dp"
                android:background="@drawable/selector"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="50sp" />

            <Button
                android:id="@+id/num_button_back"
                android:layout_margin="2dp"
                android:background="@android:drawable/ic_media_rew"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="50sp" />
        </GridLayout>

    </LinearLayout>


</FrameLayout>
